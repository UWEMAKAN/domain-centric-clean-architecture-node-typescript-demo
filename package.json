{
  "name": "api-typescript",
  "version": "1.0.0",
  "description": "Api starter kit for typescript",
  "main": "app.ts",
  "scripts": {
    "prestart": "npm run build && npm run gen:docs",
    "start": "node ./dist/app.js",
    "serve": "nodemon ./dist/app.js",
    "prewatch": "rimraf dist",
    "watch": "tsc -w",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "postbuild": "mkdir dist/logs && touch dist/logs/access.log",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:cover": "jest --coverage",
    "lint": "eslint \"src/**/*.ts\"",
    "gen:docs": "npx jsdoc ./src/**/**/*.js -d './dist/public/docs'"
  },
  "keywords": [
    "TypeScript",
    "Api",
    "Nodejs"
  ],
  "author": "Uwem Akan Nkereuwem",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UWEMAKAN/api-typescript.git"
  },
  "bugs": {
    "url": "https://github.com/UWEMAKAN/api-typescript/issues"
  },
  "homepage": "https://github.com/UWEMAKAN/api-typescript#readme",
  "dependencies": {
    "@types/app-root-path": "1.2.4",
    "@types/body-parser": "1.19.0",
    "@types/compression": "1.7.0",
    "@types/cors": "2.8.6",
    "@types/express": "4.17.6",
    "@types/morgan": "1.9.0",
    "@types/nodemon": "1.19.0",
    "@types/response-time": "2.3.4",
    "@types/rimraf": "3.0.0",
    "@types/supertest": "2.0.9",
    "@types/watch": "1.0.1",
    "app-root-path": "3.0.0",
    "body-parser": "1.19.0",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "express": "4.17.1",
    "jsdoc": "3.6.4",
    "morgan": "1.10.0",
    "nodemon": "2.0.4",
    "pg": "8.2.1",
    "reflect-metadata": "0.1.13",
    "response-time": "2.3.2",
    "rimraf": "3.0.2",
    "supertest": "4.0.2",
    "typeorm": "0.2.25",
    "watch": "1.0.2",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "@types/jest": "25.2.3",
    "@types/node": "14.0.13",
    "@typescript-eslint/eslint-plugin": "3.2.0",
    "@typescript-eslint/parser": "3.2.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.1.0",
    "eslint-config-airbnb-typescript": "8.0.2",
    "eslint-plugin-import": "2.21.1",
    "jest": "26.0.1",
    "ts-jest": "26.1.0",
    "ts-node": "8.10.2",
    "typescript": "3.8.3"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "node-modules/**/node_modules"
    ],
    "delay": "5000",
    "env": {
      "NODE_ENV": "development",
      "PORT": 4500
    }
  }
}
